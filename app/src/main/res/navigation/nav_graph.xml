<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/nameFragment">

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.example.birthdaygreet.NameFragment"
        android:label="@string/app_name"
        tools:layout="@layout/name_fragment">
        <action
            android:id="@+id/action_nameFragment_to_birthdayFragment"
            app:destination="@id/birthdayFragment" />
    </fragment>
    <fragment
        android:id="@+id/birthdayFragment"
        android:name="com.example.birthdaygreet.BirthdayFragment"
        android:label="@string/happy_birthday"
        tools:layout="@layout/fragment_birthday" />
</navigation>